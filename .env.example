# Configuração do Ambiente
NODE_ENV=development
PORT=3000

# Configuração do Banco de Dados
DB_PATH=./congress_data.db

# Configuração de Segurança
# IMPORTANTE: Mude este JWT_SECRET para um valor único e seguro
JWT_SECRET=mude_este_secret_para_algo_unico_e_seguro
JWT_EXPIRES_IN=24h

# Configuração do CORS
CORS_ORIGIN=http://localhost:3000

# Configuração de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações opcionais para produção
# BCRYPT_ROUNDS=12
# SESSION_SECRET=outro_secret_para_sessoes

# Configuração de logs (opcional)
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# Para produção, considere usar PostgreSQL:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/arranjo_congressos